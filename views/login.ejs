<body>

    <!-- FORMULAIRE DE CONNEXION -->
    <div class="card">
        <h2>Login Form</h2>

        
        <form class="form" action="home" method="post">
            <input type="text" placeholder="username" class="email" name="username">
            <input type="password" placeholder="password" class="pass" name="password">


            <!-- MOT DE PASSE OUBLIE ? -->
            <a href="#" class="fp">Forgot password?</a>

            <!-- BOUTTON LOGIN -->
            <button type="submit" class="login_btn">Login</button>

            <!-- PIED DE LA CARD -->
            <div class="footer_card">
                <p>Not a member?</p>
                <a href="#">Singup now</a>
            </div>
        </form>

    </div>    
    <script src="validation.js"></script>

</body>
